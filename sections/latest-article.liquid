  "name": "Latest Article",
  "tag": "section",
  "class": "section",
  "settings": [
      {
          "type": "text",
          "id": "heading_one",
          "label": "Heading one"
      },
      {
          "type": "text",
          "id": "heading_two",
          "label": "Heading two"
      },
      {
          "type": "image_picker",
          "id": "article_image",
          "label": "Article image"
      },
      {
          "type": "text",
          "id": "article_heading_one",
          "label": "Article Heading one"
      },
      {
          "type": "text",
          "id": "article_heading_two",
          "label": "Article Heading two"
      },
      {
          "type": "text",
          "id": "article_heading_three",
          "label": "Article Heading three"
      },
      {
          "type": "text",
          "id": "article_heading_four",
          "label": "Article Heading Four"
      }
  ],
  "blocks": [
      {
          "type": "text",
          "name":"Article",
          "settings": [
              {
                  "type": "image_picker",
                  "id": "article_image",
                  "label": "Article image"
              },
              {
                  "type": "text",
                  "id": "article_heading_one",
                  "label": "Article Heading one"
              },
              {
                  "type": "text",
                  "id": "article_heading_two",
                  "label": "Article Heading two"
              },
              {
                  "type": "text",
                  "id": "article_heading_three",
                  "label": "Article Heading three"
              },
              {
                  "type": "text",
                  "id": "article_heading_four",
                  "label": "Article Heading Four"
              }
          ]
      }
  ],
  "presets" : [
    {
      "name": "Latest Article"
    }
  ]
}
{% endschema %}
