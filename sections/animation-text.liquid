{{ 'animation-text.css' | asset_url | stylesheet_tag }}


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mob_padding_top }}px;
    padding-bottom: {{ section.settings.mob_padding_bottom }}px;
  }
  .section_text--{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }
  .section_text--{{ section.id }} .section_animation-text--content {
    color: {{ section.settings.text_color }};
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% if section.blocks.size > 0 %}
<div class="section-{{ section.id }}-padding section_animation-text section_text--{{ section.id }}">
  <div class="section_animation-text--inner swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.settings.text != blank %}
          <div class="swiper-slide section_animation-text--content">
            <p>{{ block.settings.text }}</p>
            {% unless forloop.first %}
            {% render 'icon-star-marquee' %}
            {% endunless %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}

<script>
  document.querySelectorAll(".section_animation-text--inner.swiper").forEach(text_animate => {
    new Swiper(text_animate, {
      direction: 'horizontal',
      freeMode: true,
      slidesPerView: "auto",
      centeredSlides: true,
      speed: 4000,
      autoplay: {
        delay: 0
      },
      loop: true,
      disableOnInteraction: true,
      allowTouchMove: false
    });
  });
</script>


{% schema %}
{
  "name": "Text animation",
  "settings": [
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Add background color",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "mob_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "mob_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile padding bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Add text content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text animation"
    }
  ]
}
{% endschema %}