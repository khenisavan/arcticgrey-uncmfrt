{{ 'section-health-fitness.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mob_padding_top }}px;
    padding-bottom: {{ section.settings.mob_padding_bottom }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section_health-fitness section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="section_health-fitness-wrapper">
      <div class="section_health-heading" bis_skin_checked="1">
        {% if section.settings.heading != blank %}
          <p>{{ section.settings.heading }}</p>
        {% endif %}
        {% if section.settings.heading_two != blank %}
          <h2>{{ section.settings.heading_two }}</h2>
        {% endif %}
      </div>
    </div>
    <div class="section_health-box-wrapper">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <div class="section_health-box">
            <img src="{{ block.settings.image | img_url:"1024x1024" }}">
            {% if block.settings.heading != blank %}
              <h4>{{ block.settings.heading }}</h4>
            {% endif %}
            {% if block.settings.description != blank %}
              {{ block.settings.description }}
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Health & Fitness",
  "class": "section",
  "tag": "section",
  "settings": [
      {
          "type": "text",
          "id": "heading",
          "label": "Heading"
      },
      {
          "type": "text",
          "id": "heading_two",
          "label": "Heading two"
      },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "mob_padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "mob_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Mobile padding bottom",
      "default": 20
    }
  ],
  "blocks": [
      {
          "type": "image",
          "name":"Image",
          "settings": [
              {
                  "type": "image_picker",
                  "id": "image",
                  "label": "Imae"
              },
              {
                  "type": "text",
                  "id": "heading",
                  "label": "Heading"
              },
              {
                  "type": "richtext",
                  "id": "description",
                  "label": "Description"
              }
          ]
      }
  ],
  "presets": [
    {
      "name": "Health & Fitness"
    }
  ]
}
{% endschema %}
